<odoo>
    <data>
        <record id="migrate_profile_employee_wizard_form" model="ir.ui.view">
            <field name="name">migrate.profile.employee.form</field>
            <field name="type">form</field>
            <field name="model">migrate.profile.employee</field>
            <field name="arch" type="xml">
                <form string="Migrate data profile" delete="false" create="false">
                    <sheet>
                        <h5>Cập nhật thông tin hồ sơ của nhân viên</h5>
                            <group  class="max_with_50">
                                <label for="file_save" string="File upload"/>
                                <div class="o_row" style="max-width: 30%">
                                    <field name="file_save" widget="binary" filename="file_name"/>
                                    <field name="file_name" invisible="1"/>
                                </div>
                                <button name="info_update" string="Update" type="object" class="oe_highlight"
                                        confirm="This will update resource request information. Are you sure you want to update?"/>
                            </group>
                            <div >
                                <a class="o_attachment_download"
                                    href="/hr_core/static/src/xls/template.xls?download=1" target="_blank">
                                    Download template
                                </a>
                            </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="migrate_profile_employee_wizard_action" model="ir.actions.act_window">
            <field name="name">Migrate data certificate</field>
            <field name="res_model">migrate.profile.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <field name="target">new</field>
                <p class="oe_view_nocontent_create">
                    Update data.
                </p>
            </field>
        </record>

        <menuitem id="migrate_profile_employee_wizard_menu" name="Migrate Profile"
              parent="hr.menu_human_resources_configuration" sequence="210"
              action="migrate_profile_employee_wizard_action"
              groups="base.group_system"/>
    </data>
</odoo>