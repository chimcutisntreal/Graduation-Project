<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_department_change_report_tree" model="ir.ui.view">
            <field name="name">hr.department.change.report.tree</field>
            <field name="model">hr.department.change.report</field>
            <field name="arch" type="xml">
                <tree string="Department Change" create="false" edit="false" delete="false">
                    <field name="employee_id"/>
                    <field name="old_department_id" readonly="1"/>
                    <field name="new_department_id"/>
                    <field name="date_update"/>
                    <field name="author_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_department_change_report_form" model="ir.ui.view">
            <field name="name">hr.department.change.report.form</field>
            <field name="model">hr.department.change.report</field>
            <field name="arch" type="xml">
                <form string="Department Change Report" create="false" edit="false" delete="false">
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date_update"/>
                            <field name="author_id"/>
                        </group>
                        <group>
                            <field name="old_department_id" readonly="1"/>
                            <field name="new_department_id"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="hr_department_change_report_search" model="ir.ui.view">
            <field name="name">hr.department.change.report.search</field>
            <field name="model">hr.department.change.report</field>
            <field name="arch" type="xml">
                <search string="Department Change Report Search">
                    <field name="employee_id" string="Employee"/>
                    <separator/>
                    <filter name="this_month" string="This month"
                            domain="[('date_update', '&gt;=', context_today().strftime('%Y-%m-01') )]"/>
                    <filter name="last_month" string="Last month" help="last month"
                            domain="[('date_update','&lt;', (context_today()+relativedelta(day=1)).strftime('%Y-%m-%d')),('date_update','&gt;=',(context_today()+relativedelta(day=1,months=-1)).strftime('%Y-%m-%d'))]"/>
                    <filter name="this_year" string="This Year"
                            domain="[('date_update','&lt;=', time.strftime('%%Y-12-31')),('date_update','&gt;=',time.strftime('%%Y-01-01'))]"/>
                    <filter name="last_year" string="Last Year"
                            domain="[('date_update', '&gt;=' ,(context_today()-relativedelta(years=1)).strftime('%Y-01-01')),('date_update','&lt;',time.strftime('%Y-01-01'))]"
                            help="last year"/>
                    <separator/>
                    <group expand="1" string="Group By">
                        <filter name="group_by_employee_id" string="Employee" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_department_change_report_action" model="ir.actions.act_window">
            <field name="name">
                Department Change Report
            </field>
            <field name="res_model">hr.department.change.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_group_by_employee_id': 1}</field>
        </record>

        <menuitem id="menu_hr_department_change_report"
                  name="Department Update Logs"
                  action="hr_department_change_report_action"
                  parent="hr.menu_hr_reporting_timesheet"
                  groups="base.group_system"
                  sequence="90"/>

    </data>
</odoo>
