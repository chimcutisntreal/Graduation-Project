<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="da_face_base_tree" model="ir.ui.view">
            <field name="name">da.facebase.tree</field>
            <field name="model">da.facebase</field>
            <field name="arch" type="xml">
                <tree>
                </tree>
            </field>
        </record>

        <record id="da_face_base_form" model="ir.ui.view">
            <field name="name">da.facebase.form</field>
            <field name="model">da.facebase</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="images" widget="image"/>
                            <button name="open_camera" string="Capture" type="object"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="da_face_base_kanban" model="ir.ui.view">
            <field name="name">da.facebase.form</field>
            <field name="model">da.facebase</field>
            <field name="arch" type="xml">
                <kanban class="o_facebase_kanban">
                    <field name="id"/>
                    <field name="employee_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar"
                                         t-att-src="kanban_image('da.facebase', 'image_medium',record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="employee_id"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>



        <record model="ir.actions.act_window" id="da_facebase_action">
            <field name="name">Face Base</field>
            <field name="res_model">da.facebase</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('da_face_base_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('da_face_base_form')})]"/>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
